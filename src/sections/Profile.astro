---
const { data } = Astro.props;
---

<section class='flex flex-col justify-center items-center py-24 text-white'>
   <img
      class='w-80 h-80 rounded-full mx-auto mb-10 border-8 border-amber-500'
      src='/user.webp'
      alt={data?.nombres}
   />
   <h1 class='text-7xl border-b border-white py-4 px-4'><b>{data?.nombres}</b> {data?.apellidos}</h1>
   <h2 class='text-4xl mt-3'>{data?.puesto}</h2>
</section>

<div class="flex justify-center">
   <img
      class='w-64 mt-24'
      src='/logo-pm.webp'
      alt='peru-masivo'
   />
</div>
